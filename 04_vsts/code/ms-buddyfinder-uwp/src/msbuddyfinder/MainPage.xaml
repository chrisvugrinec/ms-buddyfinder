<Page
    x:Class="msbuddyfinder.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:msbuddyfinder"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid >
        <TextBox HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Closest beacon:" VerticalAlignment="Top" Width="340" BorderBrush="{x:Null}" FontSize="22"/>
        <TextBox x:Name="txtBeaconName" HorizontalAlignment="Left" Margin="10,56,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="340" BorderBrush="{x:Null}" Foreground="#FFE3008C" FontSize="36" FontWeight="Bold"/>
        <TextBox HorizontalAlignment="Left" Margin="10,121,0,0" TextWrapping="Wrap" Text="Distance:" VerticalAlignment="Top" Width="340" BorderBrush="{x:Null}" FontSize="22"/>
        <TextBox x:Name="txtBeaconRange" HorizontalAlignment="Left" Margin="10,167,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="340" BorderBrush="{x:Null}" Foreground="#FFE3008C" FontSize="36" FontWeight="Bold"/>
    </Grid>
</Page>
